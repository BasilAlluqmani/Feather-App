<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="Theme.FinalProjectKotlinBootcamp" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">#1597E5</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>

<?xml version="1.0" encoding="utf-8"?>
    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
    android:background="#CBFFFA"
        app:layout_constraintTop_toBottomOf="@+id/tvSignUp"
        tools:context=".UI.Setting">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <TextView
                android:textColor="@color/black"

                android:id="@+id/setting_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_marginTop="48dp"

                android:text="@string/setting"


                android:textSize="50sp"

                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.193"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:ignore="MissingConstraints" />

            <androidx.cardview.widget.CardView
                android:id="@+id/cardSettings"

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:layout_marginTop="84dp"
                android:backgroundTint="#9BB8E4"
                android:orientation="vertical"
                app:cardCornerRadius="35sp"
                app:cardElevation="35sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.6"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/setting_id"

                tools:ignore="MissingConstraints">


                <LinearLayout
                    android:id="@+id/linearSetting"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="20dp"
                    android:layout_marginTop="84dp"
                    android:orientation="vertical"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.6"
                    app:layout_constraintStart_toStartOf="parent"
                    tools:ignore="MissingConstraints">


                    <TextView
                        android:id="@+id/tvChangePassword_xml"

                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"

                        android:layout_margin="10dp"
                        android:drawableEnd="@drawable/ic_arrow_down"
                        android:text="change_password"
                        android:textColor="@color/black"
                        android:textSize="25sp" />

                    <View
                        android:id="@+id/divider"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="?android:attr/listDivider" />

                    <TextView
                        android:id="@+id/changeLanguag_id"
                        android:layout_width="match_parent"

                        android:layout_height="wrap_content"

                        android:layout_margin="10dp"
                        android:drawableEnd="@drawable/ic_arrow_down"
                        android:text="change_language"

                        android:textColor="@color/black"
                        android:textSize="25sp" />

                    <View
                        android:id="@+id/divider2"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="?android:attr/listDivider" />

                    <Switch
                        android:id="@+id/switchDarkMode"

                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:layout_weight="1"
                        android:text="Dark Mode"
                        android:textColor="@color/black"
                        android:textSize="20sp"
                        tools:ignore="UseSwitchCompatOrMaterialXml,TouchTargetSizeCheck" />




                </LinearLayout>

            </androidx.cardview.widget.CardView>


            <TextView
                android:textColor="@color/black"

                android:id="@+id/aboutApp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_marginTop="48dp"

                android:text="About App"


                android:textSize="50sp"

                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.193"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/cardSettings"
                tools:ignore="MissingConstraints" />



            <androidx.cardview.widget.CardView
                android:id="@+id/cardAboutApp"




                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:layout_marginTop="84dp"
                android:backgroundTint="#C4D3FF"
                android:orientation="vertical"
                app:cardCornerRadius="35sp"
                app:cardElevation="35sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.6"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/aboutApp"

                tools:ignore="MissingConstraints">


                <LinearLayout
                    android:id="@+id/linearAboutApp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="20dp"
                    android:layout_marginTop="84dp"
                    android:orientation="vertical"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.6"
                    app:layout_constraintStart_toStartOf="parent"
                    tools:ignore="MissingConstraints">


                    <TextView
                        android:id="@+id/aboutUs_id"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:drawableEnd="@drawable/ic_arrow_down"
                        android:text="AboutUs"
                        android:textColor="#000000"
                        android:textSize="25sp" />

                    <View
                        android:id="@+id/divider3"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="?android:attr/listDivider" />

                    <TextView
                        android:id="@+id/helpAndSupport_id"
                        android:layout_width="match_parent"

                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:drawableEnd="@drawable/ic_arrow_down"
                        android:text="help and support"
                        android:textColor="@color/black"
                        android:textSize="25sp"
                        tools:ignore="DuplicateIds" />


                </LinearLayout>

            </androidx.cardview.widget.CardView>


            <LinearLayout
                android:id="@+id/linearLogout"


                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:orientation="vertical"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/cardAboutApp"
                tools:ignore="MissingConstraints">

                <Button
                    android:id="@+id/buttonLogOut_xml"
                    android:layout_width="match_parent"

                    android:layout_height="match_parent"
                    android:layout_margin="10dp"
                    android:text="signout"
                    android:backgroundTint="#FF0000"

                    android:textColor="#FFFFFF"
                    android:textSize="35sp" />

            </LinearLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>






</androidx.constraintlayout.widget.ConstraintLayout>